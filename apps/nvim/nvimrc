syntax on
set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab 
set nocp

set background=dark

nnoremap <C-Tab> :tabnext<CR>
nnoremap <C-S-Tab> :tabprevious<CR>
nnoremap <C-t> :tabnew<CR>
inoremap jj <Esc>

noremap <C-1> 1gt
noremap <C-2> 2gt
noremap <C-3> 3gt
noremap <C-4> 4gt
noremap <C-5> 5gt
noremap <C-6> 6gt
noremap <C-7> 7gt
noremap <C-8> 8gt
noremap <C-9> 9gt
noremap <C-0> 10gt
