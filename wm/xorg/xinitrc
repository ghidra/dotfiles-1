#!/bin/sh

# Load .d configs
if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi

# Use .Xresources
xrdb ~/.Xresources

# VirtualBox client service
killall VBoxClient
VBoxClient-all
sleep 1

# Place monitors
# xrandr --output VBOX1 --left-of VBOX0 &

# Set wallpaper
if [ -f $HOME/.fehbg ]; then
  eval $(cat $HOME/.fehbg)
fi

# Window Manager
"$DOTFILES_PATH/wm/bar/bar_init" &
unclutter &
sxhkd &
xautolock -time 1 -locker slock &
exec bspwm
